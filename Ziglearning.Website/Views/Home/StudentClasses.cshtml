
@model Ziglearning.Website.Models.UserViewModel

<h2>Student Classes</h2>


@if (Model.Classes.Length != 0)
{

    <table class="table">

        <tr>
            <th>Name</th>
            <th>Description</th>
            <th> Price</th>
        </tr>


        @foreach (var clas in Model.Classes)
        {
            <tr>
                <td>@clas.Name</td>
                <td>@clas.Description</td>
                <td>$@clas.Price.ToString("0.00")</td>
            </tr>
        }


    </table>


}



@if (Model.Classes.Length == 0)
{
<h2>You have not registered to any classes yet!</h2>
<h2>@Html.ActionLink("Enroll in a Class", "Enroll")</h2>
}

